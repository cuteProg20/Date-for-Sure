<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dateforsure">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo3"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo3"
        android:supportsRtl="true"
        android:theme="@style/Theme.DateForSure">
        <activity
            android:name="ui.MainScreen"
            android:exported="false" />
        <activity
            android:name="ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ui.SignUp"
            android:exported="false" />

        <activity
            android:name="ui.VerificationActivity"
            android:exported="false" />
    </application>

</manifest>